app = "virtual-voice-assistant"
primary_region = "iad"   # or whatever region you chose

[build]
  builder = "paketobuildpacks/builder:base"

[[services]]
  internal_port = 8080
  protocol = "tcp"

  [services.concurrency]
    type = "requests"
    hard_limit = 25
    soft_limit = 20

  [[services.ports]]
    port = 80
    handlers = ["http"]

  [[services.ports]]
    port = 443
    handlers = ["tls", "http"]

  [[services.tcp_checks]]
    grace_period = "10s"
    interval = "15s"
    timeout = "2s"

# This single line forces the tiny free-tier VM
[processes.app]
  vm.size = "shared-cpu-1x"
  memory = 256